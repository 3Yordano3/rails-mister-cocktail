<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-8 col-md-8 mt-5">
<h1><%= @cocktail.name %><span class="btn btn-primary to_right_index"><%= link_to "see all cocktails", cocktails_path  %></span>
</h1>
<span class="btn btn-primary"><%= link_to "new dose", new_cocktail_dose_path(@cocktail) %></span>
</h1>

<% @cocktail.doses.each do |dose| %>
 <div class="card-product" style="position:relative">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">
  <div class="card-product-infos">
    <span class="btn btn-danger to_right_show to_top"><%= link_to "X", dose_path(dose), {method: :delete,
      data: { confirm: "Are you sure?" }} %></span>
    <h2><%=   dose.ingredient.name %></h2>
    <p> <%=  dose.description %> </p>
  </div>
</div>

  <% end %>



</div>
</div>
</div>
